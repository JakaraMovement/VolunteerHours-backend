.page-container.session-container
  .page-wrapper.session-wrapper
    .login-box
      .grid-x
        .cell
          = form_for(resource, as: resource_name, url: session_path(resource_name), html: {'data-abide' => '', novalidate: ''}) do |f|
            .row
              %h1.text-center= t('.sign_in', default: 'WELCOME BACK')
              %p.helper-text Sign in to manage your volunteer hours.
              %br
            .alert.callout{'data-abide-error' => '', style: 'display: none;'}
              %p
                %i.fi-alert
                Please fix the errors below:
            .row
              = f.email_field :email, autofocus: true, placeholder: 'Email', required: '', pattern: 'email'
              %span.form-error Please enter a valid email.
            .row
              = f.password_field :password, autocomplete: 'off', placeholder: 'Password', required: ''
              %span.form-error Password is a required field.

            -# if devise_mapping.rememberable?
              .row
                = f.check_box :remember_me
                = f.label :remember_me
            .row
              = f.submit  t('.sign_in', default: 'Sign in'), class: 'button'
          = render 'devise/shared/links'
