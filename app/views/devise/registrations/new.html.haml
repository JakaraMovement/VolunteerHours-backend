.grid-x.registration
  .cell.large-6.medium-6
    .login-box
      .grid-x
        .cell
          = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {'data-abide' => '', novalidate: ''}) do |f|
            .row
              %h5.text-center= t('.sign_up', :default => "REGISTRATION")
              %br
            .grid-x.grid-margin-x
              .cell.large-6.medium-6
                = f.input :first_name, autofocus: true, class: "large-12 columns", placeholder: "First name", required: ''
                .form-error
                  First name is a required field.
              .cell.large-6.medium-6
                = f.input :last_name, class: "large-12 columns", placeholder: "Last name", required: ''
            .row
              = f.email_field :email, class: "large-12 columns", placeholder: "Email", required: ''
            .row
              = f.password_field :password, autocomplete: "off", class: "large-12 columns", placeholder: "Password", required: ''
            .row
              = f.password_field :password_confirmation, autocomplete: "off", class: "large-12 columns", placeholder: "Password Confirmation", required: ''
            .row
              = f.label :birthday
              .birthday-wrapper
                = f.input :birthday, class: "large-12 columns", as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, :order => [:month, :day, :year], default: {year: '1995'}, label: false
            .row
              = f.input :address, class: "large-12 columns", placeholder: "address", required: ''
            .grid-x.grid-margin-x
              .cell.large-4.medium-4
                = f.input :city, class: "large-12 columns", label: 'city', required: ''
              .cell.large-4.medium-4
                = f.input :state, class: "large-12 columns", label: 'state', as: :select, collection: us_states, required: ''
              .cell.large-4.medium-4
                = f.input :zip_code, class: "large-12 columns", required: ''
            .row
              = f.input :gender, as: :select, collection: User.genders.keys, label: 'Gender', required: ''
            .row
              = f.input :phone, class: "large-12 columns", label: 'phone', required: ''
            .grid-x.grid-margin-x
              .cell.large-6.medium-6
                = f.input :parent_first_name, class: "large-12 columns", required: ''
              .cell.large-6.medium-6
                = f.input :parent_last_name, class: "large-12 columns", required: ''
            .row
              = f.input :parent_email, class: "large-12 columns", required: ''
            .row
              = f.input :parent_phone, class: "large-12 columns", required: ''
            .row
              = f.input :school_year, as: :select, collection: school_years, class: "large-12 columns", required: ''
            .row
              = f.submit t('.sign_up', :default => "Sign up"), class: "button"
          = render "devise/shared/links"
