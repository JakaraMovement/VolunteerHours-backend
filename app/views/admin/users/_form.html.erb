<div class="grid-x">
	<div class="cell large-6 medium-6">
		<%= simple_form_for [:admin, @user] do |f| %>
			<div class="grid-x grid-margin-x">
				<div class="cell large-6 medium-6">
					<%= f.input :first_name, autofocus: true, placeholder: "First name", required: '' %>
				</div>
				<div class="cell large-6 medium-6">
					<%= f.input :last_name, placeholder: "Last name", required: '' %>
				</div>
			</div>
			<div class="row">
				<%= f.email_field :email, placeholder: "Email", required: '' %>
			</div>
			<div class="row">
				<%= f.password_field :password, autocomplete: "off", placeholder: "Password", required: '' %>
			</div>
			<div class="row">
				<%= f.label :birthday %>
				<div class="birthday-wrapper">
					<%= f.input :birthday, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 12, :order => [:month, :day, :year], default: {year: '1995'}, label: false %>
				</div>
			</div>
			<div class="row">
				<%= f.input :address, placeholder: "address", required: '' %>
			</div>
			<div class="grid-x grid-margin-x">
				<div class="cell large-4 medium-4">
					<%= f.input :city, label: 'city', required: '' %>
				</div>
				<div class="cell large-4 medium-4">
					<%= f.input :state, label: 'state', as: :select, collection: us_states, required: '' %>
				</div>
				<div class="cell large-4 medium-4">
					<%= f.input :zip_code, required: '' %>
				</div>
			</div>
			<div class="row">
				<%= f.input :gender, as: :select, collection: User.genders.keys, label: 'Gender', required: '' %>
			</div>
			<div class="row">
				<%= f.input :phone, label: 'phone', required: '' %>
			</div>
			<div class="grid-x grid-margin-x">
				<div class="cell large-6 medium-6">
					<%= f.input :parent_first_name, required: '' %>
				</div>
				<div class="cell large-6 medium-6">
					<%= f.input :parent_last_name, required: '' %>
				</div>
			</div>
			<div class="row">
				<%= f.input :parent_email, required: '' %>
			</div>
			<div class="row">
				<%= f.input :parent_phone, required: '' %>
			</div>
			<div class="row">
				<%= f.input :school_year, as: :select, collection: school_years, required: '' %>
			</div>
			<div class="row">
				<%= f.submit 'Save', class: 'button' %>
				<%= link_to 'Cancel', admin_users_path, class: 'button', style: 'margin-left:0.5rem;' %>
			</div>
		<% end %>
	</div>
</div>
