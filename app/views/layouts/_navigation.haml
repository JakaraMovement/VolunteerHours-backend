.navigation.top-bar
	.top-bar-left
		.page-container
			.nav-page-wrapper
				.navigation-wrapper
					%ul.dropdown.menu{"data-dropdown-menu" => ""}
						- if user_signed_in?
							%li#logo
								= link_to dashboard_path, id: 'logo-link' do
									= image_tag 'humanics-fresno-state-logo.png', id: 'bulldog-logo'
									= image_tag 'jakara-logo.png', id: 'jakara-logo'
							%li.nav-item
								= link_to 'Events', dashboard_events_path
						- else
							%li#logo
								= image_tag 'humanics-fresno-state-logo.png', id: 'bulldog-logo'
								= image_tag 'jakara-logo.png', id: 'jakara-logo'
					%ul.dropdown.menu{"data-dropdown-menu" => ""}
						- if user_signed_in?
							%li.nav-item
								= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do
									%em.icon-notebook
									%span
										Logout
						- else
							%li.nav-item#sign-up-button
								= link_to 'Sign up', new_user_registration_path
							%li.nav-item#sign-in-button
								= link_to 'Sign in', new_user_session_path